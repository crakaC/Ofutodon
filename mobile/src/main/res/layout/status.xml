<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_super_dark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:paddingBottom="@dimen/spacing_micro"
    android:paddingEnd="@dimen/list_item_padding"
    android:paddingStart="@dimen/list_item_padding"
    android:paddingTop="@dimen/spacing_mid_large">

    <ImageView
        android:id="@+id/reblogged_by_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/icon"
        android:layout_marginBottom="@dimen/list_item_padding"
        android:transitionName="@string/transition_name_user_icon" />

    <ImageView
        android:id="@+id/reblogged_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@+id/reblogged_by_name"
        android:src="@drawable/ic_boost"
        android:tint="@color/boosted"/>

    <TextView
        android:id="@+id/reblogged_by_name"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaaaaaaaaaaa"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:id="@+id/displayName"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reblogged_by_icon"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/createdAt"
        android:ellipsize="end"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/reblogged_by_icon"
        android:layout_marginEnd="@dimen/spacing_mid_large"
        android:layout_marginStart="@dimen/spacing_micro" />

    <TextView
        android:id="@+id/createdAt"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/displayName"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/reblogged_by_icon" />

    <com.crakac.ofutodon.ui.widget.TouchTroughTextView
        android:id="@+id/status"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_marginTop="@dimen/spacing_micro"
        android:layout_toEndOf="@+id/icon" />

    <com.crakac.ofutodon.ui.widget.InlineImagePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/status"
        android:layout_below="@+id/status"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/preview"
        android:layout_marginStart="-12dp"
        android:layout_toEndOf="@+id/icon"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/reply"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_reply" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/boost"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_boost" />

            <ImageView
                android:id="@+id/followers_only"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/direct"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:src="@drawable/ic_private_message"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/favorite"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/more"
                style="@style/StatusActionItem"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>