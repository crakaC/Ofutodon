<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_dark"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:paddingEnd="@dimen/list_item_padding"
    android:paddingStart="@dimen/list_item_padding"
    android:paddingTop="@dimen/list_item_padding">

    <TextView
        android:id="@+id/displayName"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/createdAt" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/spacing_mid_large"
        android:layout_marginStart="@dimen/spacing_micro" />

    <TextView
        android:id="@+id/status"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:id="@+id/createdAt"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/status"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="-4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reply"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_reply" />

        <ImageView
            android:id="@+id/boost"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_boost" />

        <ImageView
            android:id="@+id/unlisted"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_lock_open"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/followers_only"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_lock"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/direct"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_private_message"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/favorite"
            style="@style/StatusActionItem"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/more"
            style="@style/StatusActionItem"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_more" />

    </LinearLayout>


</RelativeLayout>