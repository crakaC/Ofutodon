<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/displayName"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/createdAt" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/status"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:id="@+id/createdAt"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/status"
        android:layout_toEndOf="@+id/icon"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reply"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_reply"
            android:tint="@color/icon_tint" />

        <ImageView
            android:id="@+id/boost"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_boost"
            android:tint="@color/icon_tint" />

        <ImageView
            android:id="@+id/followers_only"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_lock"
            android:tint="@color/icon_tint"
            />

        <ImageView
            android:id="@+id/direct"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_message"
            android:tint="@color/icon_tint"
            />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:layout_marginEnd="@dimen/image_inner_padding"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_favorite_border"
            android:tint="@color/icon_tint" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/image_button"
            android:layout_height="@dimen/image_button"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/image_inner_padding"
            android:src="@drawable/ic_more"
            android:tint="@color/icon_tint" />

    </LinearLayout>


</RelativeLayout>