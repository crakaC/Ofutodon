<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toot_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:background="@drawable/dialog_background"
        android:clickable="true"
        android:elevation="@dimen/z_fab"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal"
        android:transitionName="@string/transition_name_toot_dialog">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/toot_text_float_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_micro"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/max_toot_length"
            app:hintTextAppearance="@style/TextAppearance.Design.Hint">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/toot_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/toot_hint"
                android:inputType="textMultiLine"
                android:textColor="@color/text_primary_dark" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/content_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal" />

        <Button
            android:id="@+id/toot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableStart="@drawable/ic_lock_white"
            android:textAppearance="@style/TextAppearance.DarkButton"
            android:text="@string/toot_public" />

    </LinearLayout>
</FrameLayout>
